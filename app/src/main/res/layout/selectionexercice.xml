<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/MuscleCuisse"
        android:layout_width="51dp"
        android:layout_height="105dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="195dp"
        android:layout_marginStart="126dp"
        android:background="@null"
        android:onClick="OnButtonCuisseClicked" />

    <ImageView
        android:id="@+id/imageMuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/human_body"
        android:contentDescription="@string/imageMuscles" />

    <Button
        android:id="@+id/MuscleDeltoide"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="95dp"
        android:background="@null" />

    <Button
        android:id="@+id/MuscleAbdo"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_alignTop="@id/imageMuscle"
        android:layout_marginTop="150dp"
        android:background="@null"
        android:onClick="onPersoSelection"/>

    <Button
        android:id="@+id/MuscleBiceps"
        android:layout_width="40dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/MuscleDeltoide"
        android:layout_marginStart="70dp"
        android:background="@null"
        android:onClick="BicepsExercise" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
