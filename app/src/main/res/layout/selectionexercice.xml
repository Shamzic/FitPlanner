<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/MuscleCuisse"
        android:layout_width="51dp"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="186dp"
        android:layout_marginStart="126dp"
        android:background="@null"
        android:onClick="QuadricepsExercise" />

    <Button
        android:id="@+id/MuscleCuisse2"
        android:layout_width="51dp"
        android:layout_height="131dp"
        android:layout_alignTop="@+id/MuscleCuisse"
        android:layout_toStartOf="@+id/MuscleBiceps2"
        android:background="@null"
        android:onClick="QuadricepsExercise" />

    <ImageView
        android:id="@+id/imageMuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/human_body"
        android:contentDescription="@string/imageMuscles" />

    <Button
        android:id="@+id/MuscleDeltoide"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="95dp"
        android:background="@null" />

    <Button
        android:id="@+id/MuscleAbdo"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_alignTop="@id/imageMuscle"
        android:layout_marginTop="150dp"
        android:background="@null"
        android:onClick="BicepsExercise"/>

    <Button
        android:id="@+id/MuscleBiceps"
        android:layout_width="53dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/MuscleDeltoide"
        android:layout_marginStart="70dp"
        android:background="@null"
        android:onClick="BicepsExercise" />

    <Button
        android:id="@+id/MuscleBiceps2"
        android:layout_width="49dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/MuscleDeltoide"
        android:layout_marginEnd="73dp"
        android:background="@null"
        android:onClick="BicepsExercise" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" >

    </ListView>


    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="italic" />



</RelativeLayout>
